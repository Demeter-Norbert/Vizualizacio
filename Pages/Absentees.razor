@page "/absentees"
@inject HttpClient Http

<div class="d-flex justify-content-between align-items-center mb-5">
    <h3>🚫 Hiányzási Statisztikák</h3>
    <a href="/" class="btn btn-outline-secondary">← Vissza</a>
</div>

@if (stats == null)
{
    <div class="text-center mt-5"><div class="spinner-border text-primary"></div></div>
}
else
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">

                @foreach (var item in stats)
                {
                    // Százalékok számítása a sávszélességhez
                    var presentPercent = (double)item.Present / item.TotalRegistered * 100;
                    var absentPercent = (double)item.Absent / item.TotalRegistered * 100;

                    <div class="card shadow-sm mb-4 border-0">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h4 class="fw-bold text-primary mb-0">@item.Year</h4>
                                <div class="text-muted">Összesen: @item.TotalRegistered jelentkező</div>
                            </div>

                            <div class="progress" style="height: 35px; font-size: 1rem; border-radius: 10px;">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: @presentPercent%">
                                    @item.Present résztvevő
                                </div>
                                <div class="progress-bar bg-danger-subtle text-danger fw-bold" role="progressbar" style="width: @absentPercent%">
                                    @item.Absent
                                </div>
                            </div>

                            <div class="mt-3 d-flex justify-content-end align-items-center text-muted">
                                <div>
                                    <span class="fw-bold text-primary">@item.Present</span> megjelent
                                </div>
                                <div class="mx-2 fs-5 text-secondary">+</div>
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-danger-subtle text-danger rounded-pill px-3 py-2">
                                        @item.Absent nem jelent meg
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="text-center mt-4 text-muted small">
                    <p>A diagram a vizsgára regisztrált, de pontszámot nem szerzett (távolmaradt) jelentkezőket mutatja.</p>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<AttendanceStat>? stats;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            stats = await Http.GetFromJsonAsync<List<AttendanceStat>>("attendance.json");
            if (stats != null) stats = stats.OrderByDescending(x => x.Year).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }
}