@page "/"
@inject NavigationManager NavManager

<PageTitle>Rezidens Dashboard</PageTitle>

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold text-primary">Rezidensvizsga Elemző</h1>
    <p class="lead text-muted">Válassz egy kategóriát az adatok vizualizációjához</p>
</div>

<div class="row g-4 mb-4 justify-content-center">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm dashboard-card p-4 text-center" @onclick='() => NavigateTo("averages")'>
            <div class="card-body">
                <div class="dashboard-icon">📊</div>
                <h3 class="card-title h5">Megyei Átlagok</h3>
                <p class="card-text text-muted small">Melyik megye teljesített a legjobban?</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm dashboard-card p-4 text-center" @onclick='() => NavigateTo("participation")'>
            <div class="card-body">
                <div class="dashboard-icon">👥</div>
                <h3 class="card-title h5">Részvételi Arány</h3>
                <p class="card-text text-muted small">Hány vizsgázó volt az egyes megyékben?</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm dashboard-card p-4 text-center" @onclick='() => NavigateTo("distribution")'>
            <div class="card-body">
                <div class="dashboard-icon">📈</div>
                <h3 class="card-title h5">Pontszám Eloszlás</h3>
                <p class="card-text text-muted small">Milyen volt a vizsga nehézsége?</p>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4 justify-content-center">
    <div class="col-md-5">
        <div class="card h-100 shadow-sm dashboard-card p-4 text-center" @onclick='() => NavigateTo("anonymity")'>
            <div class="card-body">
                <div class="dashboard-icon">🕵️</div>
                <h3 class="card-title h5">Névtelenség</h3>
                <p class="card-text text-muted small">Hányan kérték az adataik titkosítását?</p>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="card h-100 shadow-sm dashboard-card p-4 text-center" @onclick='() => NavigateTo("growth")'>
            <div class="card-body">
                <div class="dashboard-icon">🚀</div>
                <h3 class="card-title h5">Éves Növekedés</h3>
                <p class="card-text text-muted small">Hogyan változott a vizsgázók száma?</p>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 justify-content-center">
    <div class="col-md-6">
        <div class="card h-100 shadow-sm dashboard-card p-4 text-center border-warning" @onclick='() => NavigateTo("absentees")'>
            <div class="card-body">
                <div class="dashboard-icon text-warning">🚫</div>
                <h3 class="card-title h5">Hiányzások</h3>
                <p class="card-text text-muted small">Regisztráltak vs. Megjelentek aránya évenként.</p>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateTo(string page)
    {
        NavManager.NavigateTo(page);
    }
}