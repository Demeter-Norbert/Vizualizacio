@page "/"
@inject HttpClient Http

<PageTitle>Rezidensvizsga Eredmények</PageTitle>

<h1>Rezidensvizsga Megyei Átlagok</h1>

<div class="row mb-3">
    <div class="col-md-4">
        <label>Válassz évet:</label>
        <select class="form-select" @onchange="OnYearChanged">
            <option value="2025">2025</option>
            <option value="2024">2024</option>
            <option value="2023">2023</option>
        </select>
    </div>
</div>

@if (filteredData == null)
{
    <p><em>Adatok betöltése...</em></p>
}
else
{
    <div class="card mb-4">
        <div class="card-header">
            Átlagos Pontszámok (@selectedYear)
        </div>
        <div class="card-body" style="overflow-x: auto;">
            <svg width="@(filteredData.Count * 40 + 50)" height="400">
                <line x1="40" y1="10" x2="40" y2="350" stroke="black" />
                <text x="10" y="20" font-size="10">950</text>
                <text x="10" y="175" font-size="10">500</text>
                <text x="10" y="350" font-size="10">0</text>

                @for (int i = 0; i < filteredData.Count; i++)
                {
                    var item = filteredData[i];
                    var height = (item.Score / 1000.0) * 340.0; // Skálázás 1000 ponthoz
                    var y = 350 - height;
                    var x = 50 + (i * 40);

                    <g>
                        <rect x="@x" y="@y" width="30" height="@height" fill="#007bff" />
                        <text x="@(x + 15)" y="370" font-size="10" text-anchor="middle" transform="rotate(0, @(x + 15), 370)">@item.County</text>
                        <text x="@(x + 15)" y="@(y - 5)" font-size="9" text-anchor="middle" fill="black">@Math.Round(item.Score)</text>
                    </g>
                }
            </svg>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Megye</th>
                <th>Átlagos Pontszám (Scor Simplu)</th>
                <th>Év</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in filteredData)
            {
                <tr>
                    <td>@item.County</td>
                    <td>@item.Score.ToString("F2")</td>
                    <td>@item.Year</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<CountyScore>? allData;
    private List<CountyScore>? filteredData;
    private int selectedYear = 2025;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            allData = await Http.GetFromJsonAsync<List<CountyScore>>("data.json");
            FilterData();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Hiba az adatok betöltésekor: {ex.Message}");
        }
    }

    private void OnYearChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int year))
        {
            selectedYear = year;
            FilterData();
        }
    }

    private void FilterData()
    {
        if (allData != null)
        {
            filteredData = allData
                .Where(d => d.Year == selectedYear)
                .OrderByDescending(d => d.Score)
                .ToList();
        }
    }

    public class CountyScore
    {
        public string County { get; set; } = "";
        public double Score { get; set; }
        public int Year { get; set; }
    }
}